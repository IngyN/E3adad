<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:padding="0dp"
    android:id="@+id/mainLayout"
    android:background="@color/windowBack"
    android:theme="@style/teal_material_theme"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/bottomenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/primary" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/stat"
        android:layout_alignStart="@+id/bottomenu"
        android:src="@drawable/stats"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:layout_alignBottom="@+id/pay" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/pay"
        android:src="@drawable/paymenthistory"
        android:layout_alignBottom="@+id/bottomenu"
        android:layout_alignEnd="@+id/bottomenu"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:layout_marginBottom="7dp" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/take_photo"
        android:scaleType="fitXY"
        android:src="@drawable/main"
        android:background="@android:color/transparent"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/update" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Account update"
        android:id="@+id/update"
        android:layout_below="@+id/take_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/estimation"
        android:text="Last Estimation"
        android:layout_below="@+id/update"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primarytext"
        android:text="Statistics"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/stat"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primarytext"
        android:text="Payment\n History"
        android:id="@+id/phist"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/pay"
        android:layout_toStartOf="@+id/pay"
        android:layout_alignBottom="@+id/pay" />
</RelativeLayout>
